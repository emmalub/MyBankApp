@page
@model MyBankApp.Pages.Account.TransferModel
@{
}

<section id="hero" class="hero section">

        <div class="container mt-5">
            <h2>Transfer from account @Model.FromAccount</h2>

            <form method="post">
                <input type="hidden" asp-for="FromAccount" />

                <div class="form-group">
                    <label>From Account ID</label>
                <p><strong>From Account:</strong> @Model.FromAccount</p>
            </div>

                <div class="form-group mt-3">
                    <label asp-for="ToAccount">To Account ID</label>
                    <input class="form-control" asp-for="ToAccount" />
                    <span class="text-danger" asp-validation-for="ToAccount"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Amount">Amount</label>
                <p class="text-muted">Available: @Model.Balance.ToString("C0")</p>
                    <input class="form-control" asp-for="Amount" />
                    <span class="text-danger" asp-validation-for="Amount"></span>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Transfer</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success mt-3">@Model.Message</div>
            }
        </div>
        </section>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
