@page
@model MyBankApp.Pages.Account.TransferModel
@{
    ViewData["Title"] = "Transfer";

}

<section id="hero" class="hero section">
        <div class="container mt-2">

        <h1>Transfer</h1>
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <form method="post">
            <input type="hidden" asp-for="FromAccount" />

            <div class="form-group">
                <p><strong>From Account:</strong> @Model.FromAccount</p>
            </div>

            <div class="form-group mt-3">
                <label asp-for="ToAccount">To Account ID</label>
                <input class="form-control form-control-sm w-25" asp-for="ToAccount" />
                <span class="text-danger" asp-validation-for="ToAccount"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Amount">Amount</label>
                <p class="text-muted">Available: @Model.Balance.ToString("C0")</p>
                <input class="form-control form-control-sm w-25" asp-for="Amount" />
                <span class="text-danger" asp-validation-for="Amount"></span>
            </div>

            <button type="submit" class="btn-small">Transfer</button>
        </form>
        <a asp-page="/Customers/CustomerDetails"
           asp-route-id="@Request.Query["customerId"]"
           class="btn-back">Back</a>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-success mt-3">@Model.Message</div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
        }
