@page
@model MyBankApp.Pages.Customers.IndexModel
@{
}

<section id="hero" class="hero section">
    <img src="assets/img/hero-bg-abstract.jpg" alt="" data-aos="fade-in" class="">


        <div class="container">
            <h1>Customers</h1>

            <div class="header-actions">

                <form method="get" class="search-form">
                    <div class="search-container">
                        <i class="fa fa-search search-icon"></i>
                        <input type="text"
                               name="q"
                               value="@Request.Query["q"]"
                               placeholder="Search customer.."
                               class="search-input" />
                    </div>
                </form>
                <a asp-page="/Customers/Create" class="create-btn">
                    <i class="bi bi-person-plus"> Create new Customer</i>
                </a>
            </div>


            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-warning">@Model.ErrorMessage</div>
            }

            <div class="table-responsive">

                <table class="table table-striped custom-table">
                    <thead>

                        <tr>
                            <th scope="col">
                                Id
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Id"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>

                                </a>
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Id"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                Name
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Name"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>

                                </a>
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Name"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                City
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="City"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>

                                </a>
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="City"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                            <th scope="col">
                                Country
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Country"
                                   asp-route-sortOrder="asc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-up"></i>

                                </a>
                                <a asp-page="/Customers/Index"
                                   asp-route-q="@Model.Q"
                                   asp-route-sortColumn="Country"
                                   asp-route-sortOrder="desc"
                                   style="text-decoration:none">
                                    <i class="fa-solid fa-angle-down"></i>
                                </a>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var c in Model.Customers)
                        {
                            <tr>
                                <td>@c.Id</td>
                                <td>@c.Name</td>
                                <td>@c.City</td>
                                <td>@c.Country</td>
                                <td>
                                    <a asp-page="/Customers/CustomerDetails" asp-route-id="@c.Id" class="custom-btn fs-5">
                                        <i class="fa-solid fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                        <tr>
                            <td>
                                @if (Model.CurrentPage != 1)
                                {
                                    <a asp-page="/Customers/Index"
                                       asp-route-sortColumn="@Model.SortColumn"
                                       asp-route-q="@Model.Q"
                                       asp-route-sortOrder="@Model.SortOrder"
                                       asp-route-pageNo="@(Model.CurrentPage - 1)"
                                       i class="bi bi-chevron-compact-left">
                                        Prev
                                    </a>
                                }
                            </td>
                            @{
                                int maxPagesToShow = 5;
                                int startPage = Math.Max(1, Model.CurrentPage - maxPagesToShow / 2);
                                int endPage = Math.Min(Model.PageCount, startPage + maxPagesToShow - 1);

                                if (endPage - startPage + 1 < maxPagesToShow)
                                {
                                    startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                                }
                            }

                            <td colspan="2" class="pagination-links">
                                @if (startPage > 1)
                                {
                                    <a asp-page="/Customers/Index"
                                       asp-route-q="@Model.Q"
                                       asp-route-sortColumn="@Model.SortColumn"
                                       asp-route-sortOrder="@Model.SortOrder"
                                       asp-route-pageNo="1">1</a>
                                    <span>...</span>
                                }
                                @for (int i = startPage; i <= endPage; i++)
                                {
                                    <a asp-page="/Customers/Index"
                                       asp-route-q="@Model.Q"
                                       asp-route-sortColumn="@Model.SortColumn"
                                       asp-route-sortOrder="@Model.SortOrder"
                                       asp-route-pageNo="@i"
                                       class="@(Model.CurrentPage == i ? "active" : "")">
                                        @i
                                    </a>
                                }
                                @if (endPage < Model.PageCount)
                                {
                                    <span>...</span>
                                    <a asp-page="/Customers/Index"
                                       asp-route-q="@Model.Q"
                                       asp-route-sortColumn="@Model.SortColumn"
                                       asp-route-sortOrder="@Model.SortOrder"
                                       asp-route-pageNo="@Model.PageCount">
                                        @Model.PageCount
                                    </a>
                                }
                            </td>
                            <td>
                                @if (Model.CurrentPage != Model.PageCount)
                                {
                                    <a asp-page="/Customers/Index"
                                       asp-route-q="@Model.Q"
                                       asp-route-sortColumn="@Model.SortColumn"
                                       asp-route-sortOrder="@Model.SortOrder"
                                       asp-route-pageNo="@(Model.CurrentPage + 1)"
                                       i class="bi bi-chevron-compact-right pagination-icon">
                                        Next
                                    </a>
                                }
                            </td>
                        </tr>


                    </tbody>
                </table>
            </div>
        </div>
</section>
