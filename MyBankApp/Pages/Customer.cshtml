@page
@model MyBankApp.Pages.CustomerModel
@{
}

<div class="container emp-profile">
    <form method="post">
        <div class="row d-flex justify-content-center">
            <div class="col-md-4">
                <div class="profile-img">
                    <!--ev profilbild-->
                </div>
            </div>
            <div class="column-md-5">
                <div class="profile-work">
                    <h1>
                        @Model.Customer.Givenname @Model.Customer.Surname
                    </h1>
                    <h2>
                        Total Balance: @Model.Customer.TotalBalance
                    </h2>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-bs-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="accounts-tab" data-bs-toggle="tab" href="#accounts" role="tab" aria-controls="accounts" aria-selected="false">Accounts</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <div class="tab-content accounts-tab" id="myTabContent">
                    <! -- About -->
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-2">
                                <label>Customer Id</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Id</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Name</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Givenname @Model.Customer.Surname</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Email</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Email</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Phone</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Phone</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Address</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Address</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Gender</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Gender</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Social security</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.SocialSecurity</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                                <label>Age</label>
                            </div>
                            <div class="col-md-4">
                                <p>@Model.Customer.Age</p>
                            </div>
                        </div>
                    </div>

                    <!-- Accounts -->
                    <div class="tab-pane fade" id="accounts" role="tabpanel" aria-labelledby="accounts-tab">
                        <h3>Accounts</h3>
                        <div class="table-responsive">

                            <table class="table table-striped custom-table">
                                <thead>
                                    <tr>
                                        <th>Account ID</th>
                                        <th>Balance</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var account in Model.Customer.Accounts)
                                    {
                                        <tr>
                                            <td>@account.AccountId</td>
                                            <td>@account.Balance</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <br />
    <a href="/Customers" class="custom-btn fs-5"><i class="bi bi-arrow-return-left"></i>Back to Customers</a>
</div>

